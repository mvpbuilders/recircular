<% if session[:cart].present? %>
  <div>

    <!-- Scroll para productos -->
    <div style="max-height: 300px; overflow-y: auto;">
      <% session[:cart].each do |product_id, _| %>
        <% product = Product.find_by(id: product_id) %>
        <% if product.present? %>
          <div class="mb-2 d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center gap-2">
              <div style="width: 60px; height: 60px; overflow: hidden;">
                <% if product.images.attached? %>
                  <%= image_tag url_for(product.images.first), alt: product.title, class: "img-fluid", style: "object-fit: cover; width: 100%; height: 100%;" %>
                <% end %>
              </div>

              <div>
                <strong><%= product.title %></strong><br>
                <span>$<%= product.precio %></span>
              </div>
            </div>

            <%= button_to "üóë", remove_from_cart_path(product.id), method: :delete, form_class: "d-inline", class: "btn btn-sm border-0 bg-transparent p-1" %>
          </div>
        <% end %>
      <% end %>
    </div>

    <!-- Total y bot√≥n fijo abajo -->
    <hr>

    <div class="d-flex justify-content-between">
      <strong>Total:</strong>
      <strong>
        $<%= session[:cart].to_h.sum do |id, _|
              product = Product.find_by(id: id.to_i)
              product&.precio.to_i
            end %>
      </strong>
    </div>

    <%= link_to "¬°Me lo llevo!", checkout_orders_path, class: "btn btn-dark w-100 mt-3" %>
  </div>
<% else %>
  <p>Tu carrito est√° vac√≠o</p>
<% end %>
