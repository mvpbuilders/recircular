<div class="card h-100 rounded-4 shadow-sm border-0" style="max-width: 220px; cursor: pointer;" onclick="window.location.href='<%= product_path(product) %>'">

  <%# Imagen del producto %>
  <% if product.images.attached? %>
    <%= image_tag product.images.first.variant(resize_to_fill: [220, 220]), class: "card-img-top object-fit-contain p-3", alt: product.title %>
  <% else %>
    <% fallback_image = product.tipo == "muebles" ? "sillon.png" : "ropa.png" %>
    <%= image_tag fallback_image, class: "card-img-top object-fit-contain p-3", alt: "Imagen no disponible" %>
  <% end %>

  <%# Info %>
  <div class="card-body px-3 pt-0 pb-3">
    <h6 class="fw-bold mb-1 text-dark"><%= product.title %></h6>
    <small class="text-muted d-block mb-1"><%= product.tipo %></small>
    <p class="mb-1 fw-bold text-success">$<%= number_with_delimiter(product.precio) %></p>
    <p class="text-purple small mb-0">
      <i class="bi bi-truck me-1"></i> Env√≠o disponible
    </p>
  </div>
</div>
